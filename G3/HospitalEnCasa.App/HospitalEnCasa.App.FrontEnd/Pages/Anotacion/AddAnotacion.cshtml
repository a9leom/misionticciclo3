@page
@model HospitalEnCasa.App.FrontEnd.AddAnotacionModel
@{
}
<h1>Nueva anotación</h1>
<form method="post" class="mt-3">
    <input hidden asp-for="anotacion.Id">
    <div class="form-group">
        <label class="form-control" asp-for="cedulaPaciente">Paciente</label>
        <select class="form-control" asp-for="cedulaPaciente" asp-items="Model.pacientes"></select>
    </div>
    <div class="form-group">
        <label class="form-control" asp-for="cedulaMedico">Medico</label>
        <select class="form-control" asp-for="cedulaMedico" asp-items="Model.medicos"></select>
    </div>
    <div class="form-group">
        <label class="form-control" asp-for="cedulaEnfermera">Enfermera</label>
        <select class="form-control" asp-for="cedulaEnfermera" asp-items="Model.enfermeras"></select>
    </div>
    <div class="form-group">
        <label class="form-control" asp-for="anotacion.descripcion">Descripción</label>
        <textarea class="form-control" asp-for="anotacion.descripcion" row="4"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Guardar</button>
    <a href="./ListAnotacion" class="btn btn-primary">Cancelar</a>
</form>