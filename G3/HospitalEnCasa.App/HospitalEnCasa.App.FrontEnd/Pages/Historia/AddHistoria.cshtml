@page
@model HospitalEnCasa.App.FrontEnd.AddHistoriaModel
@{
}
<h1>Añadir historia</h1>
<p>En esta pagína podras añadir una historia</p>
<form method="post" class="mt-3">
    <input hidden asp-for="historia.Id">
    <div class="form-group row">
        <label asp-for="idAnotacion"class="form-control">Anotación</label>
        <select asp-for="idAnotacion" class="form-control" asp-items="Model.anotaciones"></select>
    </div>
    <div class="form-group row">
        <label asp-for="historia.fecha" class="form-control">Fecha</label>
        <input asp-for="historia.fecha" class="form-control" value=@DateTime.Now >
    </div>
    <button class="btn btn-primary">Guardar</button>
    <a href="./ListAnotacion" class="btn btn-primary">Cancelar</a>
</form>