@page
@model HospitalEnCasa.App.FrontEnd.EditarModel
@{
}

<h1>Editar</h1>
<form method="post" class="mt-3">

    <input hidden asp-for="persona.cedula" />
    <input hidden asp-for="persona.Id" />
    <div class="form-group row">
        <label asp-for="persona.nombre" class="col-sm-2"></label>
        <input asp-for="persona.nombre" class="form-control">
    </div>
    <div class="form-group row">
        <label asp-for="persona.edad" class="col-sm-2"></label>
        <input asp-for="persona.edad" class="form-control">
    </div>
    <div class="form-group row">

        <button type="submit" class="btn btn-primary">Actualizar</button>
        <a asp-page="/List" class="btn btn-primary">Cancelar</a>
    </div>
</form>