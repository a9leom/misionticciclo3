@page
@model HospitalEnCasa.App.FrontEnd.ListModel
@{
}
<h1>Crear personas</h1>
<td><a class="btn btn-primary table-btn" asp-page="./Crear">Crear</a><br>

<h1> Listado de personas</h1>
<table class="table">
    <tr>
        <th>Nombre</th>
        <th>Cedula</th>
        <th>Edad</th>
        <th>Acciones</th>
    </tr>      
    @foreach(var persona in Model.personas){
        <tr>
            <td>@persona.nombre</td>
            <td>@persona.cedula</td>
            <td>@persona.edad</td>
            <td><a class="btn btn-primary table-btn" asp-page="./Details" asp-route-cedula="@persona.cedula">Detalles</a><br>
            <a class="btn btn-primary table-btn" asp-page="./Editar" asp-route-cedula="@persona.cedula">Editar</a></td>
        </tr>
    }

</table>

