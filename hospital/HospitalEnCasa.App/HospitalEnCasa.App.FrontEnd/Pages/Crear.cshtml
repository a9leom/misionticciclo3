@page
@model HospitalEnCasa.App.FrontEnd.CrearModel
@{
}
<h1>Crear</h1>
<form method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="persona.cedula" class="col-sm-2">Cedula</label>
        <input asp-for="persona.cedula" class="form-control">
    </div>
    <div class="form-group row">
        <label asp-for="persona.nombre" class="col-sm-2">Nombre</label>
        <input asp-for="persona.nombre" class="form-control">
    </div>
    <div class="form-group row">
        <label asp-for="persona.edad" class="col-sm-2">Edad</label>
        <input asp-for="persona.edad" class="form-control">
    </div>
    <div class="form-group row">

        <button type="submit" class="btn btn-primary">Agregar</button>
        <a asp-page="/List" class="btn btn-primary">Cancelar</a>
    </div>
</form>