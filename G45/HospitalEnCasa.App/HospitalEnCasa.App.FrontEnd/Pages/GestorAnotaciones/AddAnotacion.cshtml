@page
@model HospitalEnCasa.App.FrontEnd.Pages.AddAnotacionModel
@{
}
<h1>Añadir anotación</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="cedulaPaciente" class="form-control">Paciente</label>
        <select class="form-control" asp-for="cedulaPaciente" asp-items="@Model.pacientes"></select>
    </div>
    <div class="form-group row">
        <label asp-for="cedulaMedico" class="form-control">Médico</label>
        <select class="form-control" asp-for="cedulaMedico" asp-items="@Model.medicos"></select>
    </div>
    <div class="form-group row">
        <label asp-for="cedulaEnfermera" class="form-control">Enfermera</label>
        <select class="form-control" asp-for="cedulaEnfermera" asp-items="@Model.enfermeras"></select>
    </div>
    <div class="form-group row">
        <label asp-for="signosVital.pulso_cardiaco">Pulso Cardiaco</label>
        <input class="form-control" asp-for="signosVital.pulso_cardiaco">
        <span class="text-danger" asp-validation-for="signosVital.pulso_cardiaco"></span>
    </div>
    <div class="form-group row">
        <label asp-for="signosVital.nivel_azucar">Nivel Azúcar</label>
        <input asp-for="signosVital.nivel_azucar" class="form-control">
        <span asp-validation-for="signosVital.nivel_azucar" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="signosVital.presion" class="form-control">Presión</label>
        <input asp-for="signosVital.presion" class="form-control">
        <span asp-validation-for="signosVital.presion" class="text-danger"></span>
    </div>
</form>
