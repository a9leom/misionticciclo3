@page
@model HospitalEnCasa.App.FrontEnd.EditEnfermeraModel
@using HospitalEnCasa.app.Dominio
@{

}
<form method="post" class="mt-3">
    <input hidden asp-for="enfermera.Id" />
    <div class="form-group row">
        <label asp-for="enfermera.cedula" class="col-sm-2">Cédula</label>
        <input asp-for="enfermera.cedula" class="form-control">
    </div>
    <div class="form-group row">
        <label asp-for="enfermera.nombre" class="col-sm-2">Nombre</label>
        <input asp-for="enfermera.nombre" class="form-control">
    </div>   
    <div class="form-group row">
        <label asp-for="enfermera.edad" class="col-sm-2">Edad</label>
        <input asp-for="enfermera.edad" class="form-control">
    </div>  
    <div class="form-group row">
        <label asp-for="enfermera.genero" class="col-sm-2">Genero</label>
        <div class="col-sm-10">
            <select asp-for="enfermera.genero" asp-items="Html.GetEnumSelectList<Genero>()"></select>   
        </div>
    </div>  
    <div class="form-group row">
        <label asp-for="enfermera.hospital" class="col-sm-2">Hospital</label>
        <input asp-for="enfermera.hospital" class="form-control">
    </div>  
    <div class="form-group row">
        <label asp-for="enfermera.descripcion" class="col-sm-2">Descripción</label>
        <input asp-for="enfermera.descripcion" class="form-control">
    </div>  
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-page="./ListEnfermera" class="btn btn-primary">Cancelar</a>
    </div>
</form>